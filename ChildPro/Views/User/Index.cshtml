                        Followed_Userid:id,
                        tag:tag
                    }).then(res=>{
                        self.kk = !self.kk;
                        ele.innerHTML = fans_num - 1;
                    })
                    .catch(err=>{
                        console.log(err);
                    });
                }
            }
        }
    })
